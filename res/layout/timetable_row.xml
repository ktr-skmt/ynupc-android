<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:padding="5dp">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
        <TextView
                android:id="@+id/timetable_row_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科目名"
                android:layout_marginRight="5dp"
                />

        <TextView
                android:id="@+id/timetable_row_lecturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/timetable_row_subject"
                android:text="教師名"
                />

        <TextView
                android:id="@+id/timetable_row_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="40"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/timetable_row_faculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="学部・学科"/>

        <TextView
                android:id="@+id/timetable_row_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/timetable_row_faculty"
                android:text="学年"/>

        <TextView
                android:id="@+id/timetable_row_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="4/10〜6/9"/>
    </RelativeLayout>
</LinearLayout>